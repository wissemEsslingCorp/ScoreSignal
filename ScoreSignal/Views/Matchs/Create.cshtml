@model ScoreSignal.Models.MatchEquipeViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="Match.Ligue" class="control-label"></label>
                <select asp-for="Match.Ligue" class="form-control" id="ligue">
                    <option value="MLS">MLS</option>
                    <option Value="LDC">UEFA Ligue des Champions</option>       
                </select>
                <span asp-validation-for="Match.Ligue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.Equipe1" class="control-label"></label>
                <select asp-for="Match.Equipe1" class="form-control" id="equipe1">
                    @foreach (var equipe in Model.Equipes) {
                    <option> @Html.DisplayFor(modelItem => equipe.Abreviation)</option>
                    }
                </select>
                <span asp-validation-for="Match.Equipe1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.Equipe2" class="control-label"></label>
                <select asp-for="Match.Equipe2" class="form-control" id="equipe2">
                    @foreach (var equipe in Model.Equipes) {
                    <option> @Html.DisplayFor(modelItem => equipe.Abreviation)</option>
                    }
                </select>
                <span asp-validation-for="Match.Equipe2" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Match.Date" class="control-label"></label>
                <input asp-for="Match.Date" class="form-control" id="date" />
                <span asp-validation-for="Match.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="createbt" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/Create.js"></script>
    
}
